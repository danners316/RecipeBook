<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
<div id="bar">
  <% unless current_user %>
      <%= link_to image_tag('register.gif'), new_user_path %>
      <%= link_to image_tag('login.gif'), login_path %>

  <% end %>
  <%= link_to image_tag('blog.gif'), "http://mews.herokuapp.com" %>
  <%= link_to image_tag('forum.gif'), "http://elephant-talk.herokuapp.com" %>
  <% if current_user %>
      <%= link_to image_tag('home.gif'), current_user %>
      <%= link_to image_tag('recipe.gif'), new_recipe_path %>
      <%= link_to image_tag('logout.gif'), logout_path %>



  <% end %>
  <%= image_tag "logo.gif" %>

</div>
  <div id="title">
  <% if @title %>
      <%= @title %>
        <hr />
  <% end %>
  </div>
<% if notice %>
<div id="notice"><%= notice %></div>
<% end %>

<div class="cl">

  <%= yield %>
  
  

</div>
</div>
</body>
</html>
