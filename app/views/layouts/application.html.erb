<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
<div id="bar">
  <% unless current_user %>
      <%= link_to "Register", new_user_path %>
  <% end %>
  <% if current_user %>
  <%= link_to "Logout", logout_path %>
  <% end %>    
  <span>RecipeBook</span>

</div>
<% if notice %>
<div id="notice"><%= notice %></div>
<% end %>

<div class="cl">
  <% if @title %>
      <h1 id="title"><%= @title %></h1>
  <% end %>
  <div id="nav">
    <% if current_user %>
    <%= link_to 'Home', current_user %><br />
    <%= link_to 'New Recipe', new_recipe_path %>
        <% end %>
  </div>
  <%= yield %>
  
  

</div>
</div>
</body>
</html>
