<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
<div id="bar">
  <% unless current_user %>
      <a class="pointer" onclick="show_register()"><%= image_tag "register.gif" %></a>
      <a class="pointer" onclick="show_login()"><%= image_tag "login.gif" %></a>

  <% end %>
  <%= link_to image_tag('blog.gif'), "http://mews.herokuapp.com" %>
  <%= link_to image_tag('forum.gif'), "http://elephant-talk.herokuapp.com" %>
  <% if current_user %>
      <%= link_to image_tag('home.gif'), current_user %>
      <%= link_to image_tag('recipe.gif'), new_recipe_path %>
      <%= link_to image_tag('logout.gif'), logout_path %>




  <% end %>
  <%= link_to image_tag('logo.gif'), root_path, :class => "flnone" %>

</div>
  <div id="title">

       <% if notice %>
            <div id="notice">
            <%= notice %>
              <hr />
            </div>
            <% else %>
            <%= @title %>
            <hr />
  <% end %>
  </div>




<div class="cl">

  <%= yield %>
  
  

</div>
</div>
</body>
</html>
