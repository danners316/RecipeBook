<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Recipe name</th>
    <th>User</th>
    <th>Name</th>
    <th>Method 1</th>
    <th>Method 2</th>
    <th>Method 3</th>
    <th>Method 4</th>
    <th>Method 5</th>
    <th>Ingredients</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.recipe_name %></td>
    <td><%= recipe.user_id %></td>
    <td><%= recipe.name %></td>
    <td><%= recipe.method_1 %></td>
    <td><%= recipe.method_2 %></td>
    <td><%= recipe.method_3 %></td>
    <td><%= recipe.method_4 %></td>
    <td><%= recipe.method_5 %></td>
    <td><%= recipe.ingredients %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

